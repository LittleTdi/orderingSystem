.index{
  width:100vw;
  height:100vh;
}
.index-container{
  width:100vw;
  padding-top:15px;
  /* position:absolute;
  top:-10px; */
}
.index-container .title{
  color:#fff;
  font-size:30px;
  font-weight:bolder;
  text-align: center;
  padding:5px 0;
}

scroll-view{
  width:100%;
  /* margin-left:auto; */
  /* margin-right:auto; */
  margin-top:10px;
  height:440px;
}
view.d-flex.flex-center{
  border:1px solid #f5f5f5;
  border-radius: 10px;
  padding:10px 20px;
  margin:10px 0;
  width:75%;
  margin-left:auto;
  margin-right:auto;
  background:#fff;
  box-shadow: #eee 10px 10px 30px 5px outset;
}
scroll-view .c-title{
  font-size:17px;
  padding-bottom:5px;
}
scroll-view image.c-icon{
  width:60px;
  height:60px;
  border-radius:50%;
  margin-right:10px;
}
scroll-view .c-detail{
  font-size:12px;
  color:gray;
}
.title-tab{
  font-size:12px;
  text-align: center;
  color:#bbb;
  padding-bottom: 20px;
}
.sub-title>text:first-child{
  font-size:15px;
  color:#fff;
}
.sub-title{
  text-align: center;
}
.sub-title>text:last-child{
  font-size:13px;
  margin-left:10px;
}