.app{
  background:#FAF7FA;
  width:100%;
  height:100vh;
}
.my-bg{
  height:175px;
  width:100%;
  position: relative;
  top:0;
}
.my-bg>image{
  height:100%;
  width:100%;
}
.my-info{
  position: absolute;
  top:0;
  left:0;
  width:100%;
  height:175px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.avatar{
  width:70px;
  height:70px;
  border-radius:100%;
  overflow:hidden;
  display: block;
}
.login{
  background:#4CAF50;
  width:68px;
  height:28px;
  border-radius:35px;
  color:#fff;
  font-size: 12px;
  vertical-align: middle;
  margin-top:11px;
}
.info{
  background:#fff;
}
.margin-top{
  margin-top:11px;
}
.item-icon{
  width:16px;
  height:16px;
  margin-right:6px;
}
.item-name{
  font-size:14px;
}
.item-to{
  width:12px;
  height:12px;
}
.item-content{
  display: flex;
  align-items: center;
}
.info-item{
  height:44px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin:0 22px;
}
.border-b{
  border-bottom:1px solid #f2f2f2;
}