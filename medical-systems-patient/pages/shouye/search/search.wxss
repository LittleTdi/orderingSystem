.search{
  width:100%;
  height:100vh;
  padding:24rpx 32rpx;
  background: #fff;
}
.search .inp-search{
  width:100%;
  padding:0;
}
.search .inp-search>input{
  height:72rpx;
  border:1px solid #F5F6F6FF;
  border-radius:36rpx;
  background-color:#fff;
  padding-left:84rpx;
  font-size:14px;
  color:#B0B4B9;
  background-repeat: no-repeat;
  background-position: 32rpx 20rpx;
}
.rmss{
  font-size: 18px;
  margin-top:60rpx;
}
.search>view:last-child{
  margin-top:32rpx;
}
.search>view:last-child button{
  padding:0 24rpx;
  height:56rpx;
  border-radius:32rpx;
  font-size: 12px;
  color:#4CAF50;
  border:1px solid #4CAF50;
  background:#fff;
}